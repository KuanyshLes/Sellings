<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kz.production.kuanysh.sellings">

    <application
        android:allowBackup="true"
        android:icon="@drawable/sellingicon"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sellingicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.welcomepart.login.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.content_owner.MainActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.welcomepart.registration.OwnerRegistrationActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:label="Регистрация" />
        <activity
            android:name=".ui.welcomepart.registration.RegistrationPhoneActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.welcomepart.registration.RegistrationConfirmationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.welcomepart.registration.SupplierRegistrationActivity"
            android:label="Регистрация"
            android:windowSoftInputMode="adjustPan|adjustResize"></activity>
        <activity
            android:name=".ui.content_suppiler.SupplierActivity"
            android:label="@string/title_activity_supplier"
            android:windowSoftInputMode="adjustPan|adjustResize"
            android:parentActivityName=".ui.welcomepart.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kz.production.kuanysh.sellings.ui.welcomepart.login.LoginActivity" />
        </activity>
    </application>

</manifest>